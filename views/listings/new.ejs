<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
      <br />
      <h2>Create New Listing</h2>
        <form method="POST" action="/listings" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
                <div class="invalid-feedback">Tittle should we valid</div>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required /></textarea>
                <div class="invalid-feedback">Description should we valid</div>
            

            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image link</label>
                <input name="listing[image]" placeholder="enter image link/URL" type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter an Image URL</div>
            </div>
            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required />
                    <div class="invalid-feedback">Price name should we valid</div>
                </div>
                <div class="mb-3 col-8">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required />
                    <div class="invalid-feedback">Location Should wr valid</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a Country</div>
            </div>
            <button class="btn btn-dark btn-add mt-3"> Add </button>
        </form>
                <br><br>
    </div>
</div>
